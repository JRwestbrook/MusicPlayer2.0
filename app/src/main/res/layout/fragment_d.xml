<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <android.support.v7.widget.CardView
        android:layout_marginTop="20dp"
        android:layout_width="match_parent"
        android:layout_height="70dp">

        <RelativeLayout
            android:clickable="true"
            android:id="@+id/aboutme"
            android:layout_width="match_parent"
            android:layout_height="70dp">

            <com.panghaha.it.mymusicplayerdemo.widget.CircleImageView
                android:layout_marginLeft="20dp"
                android:id="@+id/ionme"
                android:layout_centerVertical="true"
                android:layout_width="70dp"
                android:layout_height="70dp"
                app:border_color="@color/white"
                android:src="@drawable/pan1"/>

            <TextView
                android:layout_marginTop="15dp"
                android:layout_marginLeft="15dp"
                android:textSize="16sp"
                android:layout_toRightOf="@+id/ionme"
                android:text="庞哈哈12138"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <TextView
                android:layout_marginTop="40dp"
                android:layout_marginLeft="15dp"
                android:textSize="12sp"
                android:layout_toRightOf="@+id/ionme"
                android:text="查看我的个人主页"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
        </RelativeLayout>
    </android.support.v7.widget.CardView>

    <android.support.v7.widget.CardView
        android:layout_marginTop="10dp"
        android:layout_width="match_parent"
        android:layout_height="40dp">
        <RelativeLayout
            android:clickable="true"
            android:id="@+id/tongyong"
            android:layout_width="match_parent"
            android:layout_height="40dp">

            <ImageView
                android:layout_centerVertical="true"
                android:layout_marginLeft="20dp"
                android:src="@drawable/ag6"
                android:id="@+id/m1"
                android:layout_width="30dp"
                android:layout_height="30dp" />

            <TextView
                android:layout_marginLeft="20dp"
                android:layout_toRightOf="@+id/m1"
                android:layout_centerVertical="true"
                android:text="通用设置"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

        </RelativeLayout>
    </android.support.v7.widget.CardView>

    <android.support.v7.widget.CardView
        android:layout_marginTop="10dp"
        android:layout_width="match_parent"
        android:layout_height="40dp">
        <RelativeLayout
            android:clickable="true"
            android:id="@+id/clearcatch"
            android:layout_width="match_parent"
            android:layout_height="40dp">
            <ImageView
                android:id="@+id/m2"
                android:layout_centerVertical="true"
                android:layout_marginLeft="20dp"
                android:src="@drawable/agb"
                android:layout_width="30dp"
                android:layout_height="30dp" />

            <TextView
                android:layout_marginLeft="20dp"
                android:layout_toRightOf="@+id/m2"
                android:layout_centerVertical="true"
                android:text="清除缓存"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <TextView
                android:id="@+id/huancun"
                android:layout_marginRight="15dp"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:text="223M"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
        </RelativeLayout>
    </android.support.v7.widget.CardView>

    <android.support.v7.widget.CardView
        android:layout_marginTop="10dp"
        android:layout_width="match_parent"
        android:layout_height="40dp">
        <RelativeLayout
            android:clickable="true"
            android:id="@+id/dashang"
            android:layout_width="match_parent"
            android:layout_height="40dp">
            <ImageView
                android:src="@drawable/ag1"
                android:id="@+id/m3"
                android:layout_centerVertical="true"
                android:layout_marginLeft="20dp"
                android:layout_width="30dp"
                android:layout_height="30dp" />

            <TextView
                android:layout_marginLeft="20dp"
                android:layout_toRightOf="@+id/m3"
                android:layout_centerVertical="true"
                android:text="大佬专用打赏"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />


        </RelativeLayout>
    </android.support.v7.widget.CardView>

    <android.support.v7.widget.CardView
        android:layout_marginTop="10dp"
        android:layout_width="match_parent"
        android:layout_height="40dp">
        <RelativeLayout
            android:id="@+id/night"
            android:layout_width="match_parent"
            android:layout_height="40dp">
            <ImageView
                android:src="@drawable/ag5"
                android:id="@+id/m4"
                android:layout_centerVertical="true"
                android:layout_marginLeft="20dp"
                android:layout_width="30dp"
                android:layout_height="30dp" />

            <TextView
                android:layout_marginLeft="20dp"
                android:layout_toRightOf="@+id/m4"
                android:layout_centerVertical="true"
                android:text="夜间模式"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <com.suke.widget.SwitchButton
                android:id="@+id/switch_button"
                android:layout_centerVertical="true"
                android:layout_alignParentRight="true"
                android:layout_marginRight="12dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:sb_show_indicator="false"
                app:sb_checked="true"/>


        </RelativeLayout>
    </android.support.v7.widget.CardView>

    <android.support.v7.widget.CardView
        android:layout_marginTop="10dp"
        android:layout_width="match_parent"
        android:layout_height="40dp">
        <RelativeLayout
            android:clickable="true"
            android:id="@+id/luoxiangsheng"
            android:layout_width="match_parent"
            android:layout_height="40dp">
            <ImageView
                android:src="@drawable/afx"
                android:id="@+id/m5"
                android:layout_centerVertical="true"
                android:layout_marginLeft="20dp"
                android:layout_width="30dp"
                android:layout_height="30dp" />

            <TextView
                android:layout_marginLeft="20dp"
                android:layout_toRightOf="@+id/m5"
                android:layout_centerVertical="true"
                android:text="罗永浩相声"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />


        </RelativeLayout>
    </android.support.v7.widget.CardView>
</LinearLayout>